# Using latest stable PHP with Apache (8.2)
FROM php:8.2-apache

# Enable apache mod_rewrite
RUN a2enmod rewrite

# Give ownership of /var/www/html to non-root user
RUN useradd -m nonroot && chown -R nonroot:www-data /var/www/html

# Copy application source code
COPY --chown=nonroot:www-data . /var/www/html/

# Switch to non-root user for security
USER nonroot

# Apache runs as www-data internally, so no need to restart here
# CMD is inherited from base image and will run apache2 in foreground by default
